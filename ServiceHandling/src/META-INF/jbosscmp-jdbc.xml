<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jbosscmp-jdbc PUBLIC "-//JBoss//DTD JBOSSCMP-JDBC 3.0//EN" "http://www.jboss.org/j2ee/dtd/jbosscmp-jdbc_3_0.dtd">

<jbosscmp-jdbc>
   <defaults>
   </defaults>

   <enterprise-beans>

     <!--
       To add beans that you have deployment descriptor info for, add
       a file to your XDoclet merge directory called jbosscmp-jdbc-beans.xml
       that contains the <entity></entity> markup for those beans.
     -->

      <entity>
         <ejb-name>AccessSessionEntity</ejb-name>
		 <datasource>java:/MySqlDS</datasource>
		 <datasource-mapping>mySQL</datasource-mapping>
         <create-table>true</create-table>

         <table-name>ACCESS_SESSION</table-name>

         <cmp-field>
            <field-name>asid</field-name>
            <column-name>ASID</column-name>
			<not-null/>

        </cmp-field>
         <cmp-field>
            <field-name>userId</field-name>
            <column-name>USERID</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>startDate</field-name>
            <column-name>STARTDATE</column-name>

        </cmp-field>

      </entity>

      <entity>
         <ejb-name>ServiceInfoEntity</ejb-name>
		 <datasource>java:/MySqlDS</datasource>
		 <datasource-mapping>mySQL</datasource-mapping>
         <create-table>true</create-table>
         <remove-table>false</remove-table>

         <table-name>SERVICE_INFO</table-name>

         <cmp-field>
            <field-name>serviceId</field-name>
            <column-name>SERVICEID</column-name>
			<not-null/>

        </cmp-field>
         <cmp-field>
            <field-name>serviceVersion</field-name>
            <column-name>SERVICEVERSION</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>serviceName</field-name>
            <column-name>SERVICENAME</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>serviceClassName</field-name>
            <column-name>SERVICECLASSNAME</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>serviceFactoryClassName</field-name>
            <column-name>SERVICEFACTORYCLASSNAME</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>serviceDescription</field-name>
            <column-name>SERVICEDECRIPTION</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>serviceEndpoint</field-name>
            <column-name>SERVICEENDPOINT</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>active</field-name>
            <column-name>ACTIVE</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>instances</field-name>
            <column-name>INSTANCES</column-name>

        </cmp-field>

      </entity>

      <entity>
         <ejb-name>ServiceSessionBeanEntity</ejb-name>
		 <datasource>java:/MySqlDS</datasource>
		 <datasource-mapping>mySQL</datasource-mapping>
         <create-table>true</create-table>

         <table-name>SERVICE_SESSION</table-name>

         <cmp-field>
            <field-name>ssid</field-name>
            <column-name>SSID</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>asid</field-name>
            <column-name>ASID</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>serviceId</field-name>
            <column-name>SERVICEID</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>startDate</field-name>
            <column-name>STARTDATE</column-name>

        </cmp-field>
         <cmp-field>
            <field-name>userId</field-name>
            <column-name>CREATORID</column-name>

        </cmp-field>

      </entity>

      <entity>
         <ejb-name>UserProfileEntity</ejb-name>
		 <datasource>java:/MySqlDS</datasource>
		 <datasource-mapping>mySQL</datasource-mapping>
         <create-table>true</create-table>
         <remove-table>true</remove-table>

         <table-name>USER_PROFILE</table-name>

         <cmp-field>
            <field-name>userId</field-name>
            <column-name>USERID</column-name>

            <jdbc-type>VARCHAR</jdbc-type>
            <sql-type>VARCHAR(100)</sql-type>

        </cmp-field>
         <cmp-field>
            <field-name>c_UserProfile</field-name>
            <column-name>CUSERPROFILE</column-name>

            <jdbc-type>VARCHAR</jdbc-type>
            <sql-type>TEXT</sql-type>

        </cmp-field>

      </entity>

   </enterprise-beans>

</jbosscmp-jdbc>
