  </global-exceptions>
  
  <global-forwards>
    <forward name="municipalityList" path="/default.do" redirect="true" />
  <forward name="showErrorGlobal" path="/error.do" redirect="false" /><forward name="formtest" path="/formtest" redirect="false" /><forward name="login" path="/login.do" redirect="true" /></global-forwards>

  <!-- ========== Action Mapping Definitions ============================== -->

  <action-mappings type="org.apache.struts.config.SecureActionConfig">

    
    
     

    

    

     

    

    

    

    <action path="/default" unknown="true" type="org.emayor.eMayorWebTier.struts.MunicipalityList.MunicipalityListAction" name="municipalityListForm" input="/municipalityList.jsp" scope="session">
    <forward name="showMunicipalityList" redirect="false" path="/municipalityList.jsp" contextRelative="false" />
    </action>
    
    <action path="/municipality" type="org.emayor.eMayorWebTier.struts.Municipality.MunicipalityAction" name="municipalityForm" scope="session" validate="false" parameter="do"><set-property property="secure" value="true" />
    <forward name="showMunicipalityServices" redirect="false" path="/municipality.jsp" /><forward name="showAuthenticationInformation" path="/showAuthenticationInformation.jsp" redirect="false" /><forward name="logout_SwitchToHTTP" path="/logout_SwitchToHTTP.jsp" redirect="false" />
    </action>
    
    <action path="/service" type="org.emayor.eMayorWebTier.struts.Service.ServiceAction" name="serviceForm" scope="session" parameter="do" validate="false">
      <set-property property="secure" value="true" />
      <forward name="requestDocument" redirect="false" path="/requestdocument.jsp" />
      <forward name="processLogin" redirect="false" path="/login.jsp" /><forward name="showCitizenRepository" path="/repositoryforcitizen.jsp" redirect="false" /><forward name="showAcknowledgement" path="/serviceAcknowledgement.jsp" redirect="false" /><forward name="WaitForServiceRequestResponse" path="/WaitForServiceRequestResponse.jsp" redirect="false" /><forward name="showCivilServantRepository" path="/repositoryforcivilservant.jsp" redirect="false" /><forward name="showDocumentForCitizen" path="/showDocumentForCitizen.jsp" redirect="false" /><forward name="requestdocumentAcknowledgement" path="/requestdocumentAcknowledgement.jsp" redirect="false" /><forward name="requestdocumentFailure" path="/requestdocumentFailure.jsp" redirect="false" /><forward name="showDocumentForCivilServant" path="/showDocumentForCivilServant.jsp" redirect="false" /><forward name="sendEMayorForm" path="/sendEMayorForm.jsp" redirect="false" /><forward name="getAppletProperties" path="/getAppletProperties.jsp" redirect="false" /><forward name="showServiceError" path="/ServiceError.jsp" redirect="false" /><forward name="postAcknowledgement" path="/postAcknowledgement.jsp" redirect="false" /><forward name="getEnumerationProperties" path="/getEnumerationProperties.jsp" redirect="false" /><forward name="showSessionExpired" path="/showSessionExpired.jsp" redirect="false" /><forward name="showFormService" path="/showFormService.jsp" redirect="false" />
    </action>
  
  <action path="/requestdocument" type="org.emayor.eMayorWebTier.struts.Service.DocumentRequestAction" name="documentRequestForm" scope="session"><forward name="requestdocument" path="/requestdocument.jsp" redirect="false" /><forward name="showAcknowledgement" path="/requestdocumentacknowledgement.jsp" redirect="false" /></action><action path="/error" parameter="do" type="org.emayor.eMayorWebTier.struts.Errors.ErrorPageAction" name="errorPageForm" scope="session" validate="false"><forward name="showErrorPage" path="/error.jsp" redirect="false" /></action><action path="/help" type="org.emayor.eMayorWebTier.struts.Help.HelpAction" name="helpForm" input="/help.jsp"><forward name="showHelp" path="/help.jsp" redirect="false" /></action><action path="/login" type="org.emayor.eMayorWebTier.struts.Login.LoginAction" name="loginForm" scope="session" parameter="do" validate="false"><set-property property="secure" value="false" /><forward name="showLoginPage" path="/login.jsp" redirect="false" /><forward name="showLoginInformation" path="/showLoginInformation.jsp" redirect="false" /><forward name="showIncorrectWebTierInstallationPage" path="/showIncorrectWebTierInstallationPage.jsp" redirect="false" /><forward name="showLoginURLInformation" path="/showLoginURLInformation.jsp" redirect="false" /></action><action path="/formtest" type="org.emayor.eMayorWebTier.struts.FormTest.FormTestAction" parameter="do" name="formTestForm" scope="session" validate="false"><forward name="testemayorform" path="/testemayorform.jsp" redirect="false" /><forward name="testgetappletproperties" path="/testgetappletproperties.jsp" redirect="false" /><forward name="testsendemayorform" path="/testsendemayorform.jsp" redirect="false" /><forward name="testformtestindex" path="/testformtestindex.jsp" redirect="false" /><forward name="testpostAcknowledgement" path="/testpostAcknowledgement.jsp" redirect="false" /><forward name="testgetEnumerationProperties" path="/testgetEnumerationProperties.jsp" redirect=