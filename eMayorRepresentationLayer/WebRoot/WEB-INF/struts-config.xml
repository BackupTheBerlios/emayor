    <form-bean name="serviceForm" type="org.emayor.eMayorWebTier.struts.Service.ServiceForm" />
    <form-bean name="loginForm" type="org.emayor.eMayorWebTier.struts.Login.LoginForm" />
    
    
    <form-bean name="documentRequestForm" type="org.emayor.eMayorWebTier.struts.Service.DocumentRequestForm" />
